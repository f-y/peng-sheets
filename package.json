{
    "name": "peng-sheets",
    "publisher": "f-y",
    "displayName": "PengSheets - Markdown Spreadsheet Editor",
    "description": "Transform Markdown tables into a powerful spreadsheet editor with Excel-like editing, multi-sheet workbooks, and real-time synchronization.",
    "icon": "images/icon.png",
    "version": "1.0.6",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Visualization",
        "Formatters",
        "Other"
    ],
    "keywords": [
        "markdown",
        "spreadsheet",
        "table",
        "editor",
        "excel",
        "csv",
        "workbook",
        "data"
    ],
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/f-y/peng-sheets.git"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "peng-sheets.openEditor",
                "title": "%command.openEditor.title%",
                "icon": "$(table)"
            },
            {
                "command": "peng-sheets.openEditorFromContextMenu",
                "title": "%command.openEditorFromContextMenu.title%"
            },
            {
                "command": "peng-sheets.newWorkbook",
                "title": "%command.newWorkbook.title%"
            },
            {
                "command": "peng-sheets.insertDate",
                "title": "Insert Current Date"
            },
            {
                "command": "peng-sheets.insertTime",
                "title": "Insert Current Time"
            },
            {
                "command": "peng-sheets.insertCopiedCells",
                "title": "Insert Copied Cells"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "peng-sheets.openEditor",
                    "when": "resourceLangId == markdown && activeCustomEditorId != peng-sheets.editor",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "peng-sheets.openEditorFromContextMenu",
                    "when": "resourceLangId == markdown",
                    "group": "navigation"
                }
            ]
        },
        "customEditors": [
            {
                "viewType": "peng-sheets.editor",
                "displayName": "PengSheets",
                "selector": [
                    {
                        "filenamePattern": "*.md"
                    }
                ],
                "priority": "option"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+;",
                "mac": "cmd+;",
                "command": "peng-sheets.insertDate",
                "when": "activeCustomEditorId == 'peng-sheets.editor'"
            },
            {
                "key": "ctrl+shift+;",
                "mac": "cmd+shift+;",
                "command": "peng-sheets.insertTime",
                "when": "activeCustomEditorId == 'peng-sheets.editor'"
            },
            {
                "key": "ctrl+shift+=",
                "mac": "cmd+shift+=",
                "command": "peng-sheets.insertCopiedCells",
                "when": "activeCustomEditorId == 'peng-sheets.editor'"
            }
        ]
    },
    "configuration": {
        "title": "PengSheets",
        "properties": {
            "pengSheets.parsing.rootMarker": {
                "type": "string",
                "default": "# Tables",
                "description": "The marker indicating the start of the data section."
            },
            "pengSheets.parsing.sheetHeaderLevel": {
                "type": "integer",
                "default": 2,
                "description": "The markdown header level for sheets."
            },
            "pengSheets.parsing.tableHeaderLevel": {
                "type": [
                    "integer",
                    "null"
                ],
                "default": 3,
                "description": "The markdown header level for tables. If null, table names are not extracted."
            },
            "pengSheets.parsing.captureDescription": {
                "type": "boolean",
                "default": true,
                "description": "Whether to capture text between the table header and the table as a description."
            },
            "pengSheets.parsing.columnSeparator": {
                "type": "string",
                "default": "|",
                "description": "Character used to separate columns."
            },
            "pengSheets.parsing.headerSeparatorChar": {
                "type": "string",
                "default": "-",
                "description": "Character used in the separator row."
            },
            "pengSheets.parsing.requireOuterPipes": {
                "type": "boolean",
                "default": true,
                "description": "Whether to tables must have outer pipes."
            },
            "pengSheets.parsing.stripWhitespace": {
                "type": "boolean",
                "default": true,
                "description": "Whether to strip whitespace from cell values."
            },
            "pengSheets.language": {
                "type": "string",
                "enum": [
                    "auto",
                    "en",
                    "ja"
                ],
                "default": "auto",
                "description": "Language for the spreadsheet UI."
            },
            "pengSheets.validation.dateFormat": {
                "type": "string",
                "enum": [
                    "YYYY-MM-DD",
                    "DD/MM/YYYY",
                    "MM/DD/YYYY",
                    "YYYY/MM/DD",
                    "DD.MM.YYYY",
                    "MM.DD.YYYY"
                ],
                "default": "YYYY-MM-DD",
                "description": "Date format for data validation cells."
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm run build:webview && tsc -p ./",
        "build:webview": "vite build",
        "dev": "vite",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src webview-ui --ext ts",
        "lint:fix": "eslint src webview-ui --ext ts --fix",
        "format": "prettier --write \"src/**/*.ts\" \"webview-ui/**/*.ts\"",
        "test": "vscode-test",
        "test:coverage": "npm run compile && node out/test/runTest.js && c8 report --temp-directory coverage/tmp --clean false --reporter=text --reporter=html",
        "test:webview": "vitest run webview-ui/tests --environment jsdom",
        "test:components": "vitest run webview-ui/tests/components --environment jsdom",
        "test:regression": "vitest run webview-ui/tests/regression --environment jsdom",
        "test:integration": "vitest run webview-ui/tests/integration --environment jsdom"
    },
    "devDependencies": {
        "@open-wc/testing": "^4.0.0",
        "@testing-library/dom": "^10.4.1",
        "@types/glob": "^8.1.0",
        "@types/marked": "^5.0.2",
        "@types/mocha": "^10.0.6",
        "@types/node": "20.x",
        "@types/sinon": "^21.0.0",
        "@types/vscode": "^1.90.0",
        "@typescript-eslint/eslint-plugin": "^7.11.0",
        "@typescript-eslint/parser": "^7.11.0",
        "@vitest/browser": "^4.0.16",
        "@vitest/coverage-v8": "^4.0.16",
        "@vscode/codicons": "^0.0.43",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "@vscode/webview-ui-toolkit": "^1.4.0",
        "@web/test-runner-commands": "^0.9.0",
        "c8": "^10.1.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "glob": "^13.0.0",
        "jsdom": "^27.3.0",
        "lit": "^3.3.1",
        "marked": "^17.0.1",
        "nanoid": "^5.1.6",
        "playwright": "^1.57.0",
        "prettier": "^3.7.4",
        "sinon": "^21.0.1",
        "typescript": "^5.4.5",
        "vite": "^7.2.4",
        "vite-plugin-static-copy": "^3.1.4",
        "vitest": "^4.0.15"
    },
    "dependencies": {
        "md-spreadsheet-parser": "^1.2.1"
    }
}
